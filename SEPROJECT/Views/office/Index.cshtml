@model IEnumerable<SEPROJECT.Models.office>

@{
    ViewBag.Title = "Index";
}
<style>
    #propertycreate {
        border: 1px solid black;
        padding: 25px 50px 75px;
    }
</style>
<div id="propertycreate" style=background-color:silver>
    <h2>Available Offices</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HR_manager)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HR_manager)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.office_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.office_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.office_id })
                </td>
            </tr>
        }

    </table>
    </div>